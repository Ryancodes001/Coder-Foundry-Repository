@model IPagedList<Coder_Foundry_Portfolio.Models.CodeFirst.BlogPost>
@{
    ViewBag.Title = "Index";

}
 @using PagedList.Mvc;
 @using PagedList;


<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('/img/zen2.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-lg col-md-10 col-md">
                <div class="page-heading">
                    <h1>My Journey through the chaos of code to the zen of developing</h1>
                    <hr class="small">
                    <span class="subheading">Blogging my Experience</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-xl-4 col-lg-offset-1 col-md-10 col-md-offset-1">

            <h1>Blog Posts</h1>
            <hr/>
          <h4>Blog Search</h4>
            @using (Html.BeginForm("Index", "BlogPosts", FormMethod.Get, new { enctype = "Multipart/form-data" }))
            {  <input type="text"  name="searchStr" class="form-control">
                <input type="submit" value="Search" class="btn btn-default" />
            }

            <br />
            
                @foreach (var item in Model)
                {
                        <h2>
                           @Html.ActionLink(item.Title, "Details", new { Slug = item.Slug })
                        </h2>

                        <h5>
                            @Html.DisplayFor(modelItem => item.Created)
                        </h5>

                       <a href="@Url.Action("Details", new { slug = item.Slug })">@item.Title</a>

                           <h5>@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </h5> <h5>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</h5>


                      <br/>
                    }

            <p>
                <button> @Html.ActionLink("Create New", "Create")</button>
            </p>

            <p>
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </p>


        </div>
    </div>
</div>